@import "{{ site.theme }}";

.topnav {
  overflow: hidden;
  padding: 0;
  margin: 0;
  background-color: #333;
}
.container{
  width: 100%;
  max-width: none;
}
.topnav a:first-child {
  border-radius: 15px;
  border: 2px solid; 
  margin-right: 15%;
}
.topnav a {
  float: right;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
  margin: .5% 0 .5% 0;
}

.underline a:after {
  content:'';
  position: absolute;
  width: 100%;
  transform: scaleX(0);
  height 2px;
  bottom: 0;
  left: 0;
  transform-origin: bottom right;
  transition: transform 0.25s ease-out;
  background-color: #ddd;
  color: black;
}
.underline:hover:after {
  transform: scaleX(1);
  transform-origin: bottom left;
}

.topnav a.active {
  background-color: #c92828d4;
  color: white;
}
.main {
  margin-left: 15%;
}